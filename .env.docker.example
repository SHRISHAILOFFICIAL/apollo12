# ========================================
# Docker Environment Variables
# Copy this to .env.docker and fill values
# ========================================

# Django Settings
# IMPORTANT: Do NOT use & or $ characters in SECRET_KEY
SECRET_KEY=change-this-to-a-random-string-without-special-chars
DEBUG=False
ALLOWED_HOSTS=*

# Database (use 'db' as host - Docker container name)
DB_NAME=dcet_platform
DB_USER=root
DB_PASSWORD=your-strong-password-here
DB_HOST=db
DB_PORT=3306

# MySQL Container Settings (Docker reads these directly)
MYSQL_ROOT_PASSWORD=your-strong-password-here
MYSQL_DATABASE=dcet_platform

# Redis (use 'redis' as host - Docker container name)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379/1

# Email (Brevo)
BREVO_API_KEY=your-brevo-api-key
DEFAULT_FROM_EMAIL=your-email@gmail.com

# JWT
JWT_SECRET_KEY=your-jwt-secret

# CORS
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:3000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost/api

# Razorpay
RAZORPAY_KEY_ID=your-razorpay-key
RAZORPAY_KEY_SECRET=your-razorpay-secret
RAZORPAY_WEBHOOK_SECRET=
