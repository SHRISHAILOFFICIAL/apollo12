# Django Backend Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================

# SECURITY WARNING: Generate a new secret key for production!
# Generate one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-this-in-production

# SECURITY WARNING: Set to False in production!
DEBUG=False

# Comma-separated list of allowed hosts (your VM IP, domain, etc.)
# For development with dynamic IP, you can use: ALLOWED_HOSTS=*
# ⚠️ WARNING: Using '*' only works when DEBUG=True (development mode)
ALLOWED_HOSTS=192.168.54.75,localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

DB_ENGINE=django.db.backends.mysql
DB_NAME=dcet_platform
DB_USER=root
DB_PASSWORD=212005
DB_HOST=localhost
DB_PORT=3306

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================

REDIS_URL=redis://127.0.0.1:6379/1

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Comma-separated list of allowed origins for CORS
# For development with dynamic IP, you can use: CORS_ALLOWED_ORIGINS=*
# ⚠️ WARNING: Using '*' only works when DEBUG=True (development mode)
CORS_ALLOWED_ORIGINS=http://192.168.54.75,http://localhost:3000

# =============================================================================
# EMAIL CONFIGURATION (Brevo)
# =============================================================================

# Get your API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your-brevo-api-key-here
DEFAULT_FROM_EMAIL=noreply@apollo11.com

# =============================================================================
# PAYMENT GATEWAY (Razorpay)
# =============================================================================

# Get your keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Path where static files will be collected
STATIC_ROOT=/var/www/dcet-platform/backend/staticfiles

# Path where media files will be stored
MEDIA_ROOT=/var/www/dcet-platform/backend/media
